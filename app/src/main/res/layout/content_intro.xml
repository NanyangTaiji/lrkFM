<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.IntroActivity"
    tools:showIn="@layout/activity_intro">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:text="@string/intro_text_1"
            android:id="@+id/introText1"
            android:layout_alignParentTop="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:text="@string/intro_text_2"
            android:id="@+id/introText2"
            android:layout_below="@+id/introText1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="@dimen/text_margin"
            android:text="@string/intro_text_3"
            android:id="@+id/introText3"
            android:layout_below="@+id/introText2"
            android:layout_marginEnd="0dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intro_link_1"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:id="@+id/introLink1"
            android:textColor="@color/link"
            android:textStyle="italic"
            android:onClick="launchSettings"
            android:layout_toEndOf="@id/introText3"
            android:layout_below="@id/introText2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="@dimen/text_margin"
            android:text="@string/intro_text_3_1"
            android:id="@+id/introText31"
            android:layout_below="@id/introText3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="@dimen/text_margin"
            android:text="@string/intro_text_4"
            android:id="@+id/introText4"
            android:layout_below="@+id/introText31"
            android:layout_marginEnd="0dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="@dimen/text_margin"
            android:text="@string/intro_text_5"
            android:id="@+id/introText5"
            android:layout_below="@+id/introText4"
            android:layout_marginEnd="0dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="@dimen/text_margin"
            android:text="@string/intro_text_6"
            android:id="@+id/introText6"
            android:layout_below="@+id/introText5"
            android:layout_marginEnd="0dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intro_link_2"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:id="@+id/introLink2"
            android:textColor="@color/link"
            android:textStyle="italic"
            android:onClick="grantPermission"
            android:layout_toEndOf="@id/introText6"
            android:layout_below="@id/introText5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="@dimen/text_margin"
            android:text="@string/intro_text_6_1"
            android:id="@+id/introText61"
            android:layout_below="@+id/introText6"
            android:layout_marginEnd="0dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="@dimen/text_margin"
            android:text="@string/intro_text_7"
            android:id="@+id/introText7"
            android:layout_below="@+id/introText61"
            android:layout_marginEnd="0dp"/>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>