<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_dark"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/nav_header_margin_bottom"
    android:paddingLeft="@dimen/nav_header_padding"
    android:paddingRight="@dimen/nav_header_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_height="?android:attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/status_bar_size">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_perm_media_black_24dp" />

        <TextView
            android:id="@+id/currentDirectoryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/loading" />

        <TextView
            android:id="@+id/diskUsage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/currentDirectoryTextView"
            android:layout_alignParentStart="true"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </RelativeLayout>


</RelativeLayout>
