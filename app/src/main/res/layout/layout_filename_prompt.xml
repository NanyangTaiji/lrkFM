<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/filenameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/prompt_margin"
        android:layout_marginStart="@dimen/prompt_margin"
        android:layout_marginTop="@dimen/file_view_margin"
        android:layout_toEndOf="@+id/filedialogIcon"
        android:layout_toRightOf="@+id/filedialogIcon"
        android:text="@string/enter_new_file_name" />

    <EditText
        android:id="@+id/filedestinationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/filenameTextView"
        android:layout_marginBottom="@dimen/file_view_margin"
        android:layout_marginEnd="@dimen/prompt_margin"
        android:layout_marginStart="@dimen/prompt_margin"
        android:importantForAutofill="no"
        tools:ignore="UnusedAttribute" />

    <ImageView
        android:id="@+id/filedialogIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:tint="?android:attr/textColorPrimary"
        android:layout_marginTop="@dimen/file_view_margin"
        android:layout_marginStart="@dimen/file_view_margin"
        android:contentDescription="@string/dialog_icon_desc"
        android:layout_marginLeft="@dimen/file_view_margin" />

</RelativeLayout>